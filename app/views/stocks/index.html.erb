<h1>Stocks</h1>

<% if notice %>
  <p class="alert alert-success"><%= notice %></p>
<% end %>

<%= link_to 'Home', root_path, class: 'btn-fun' %>

<% if user_signed_in? && current_user.admin? %>
  <%= button_to 'Fetch Data', fetch_data_path, method: :post, class: 'btn-fun' %>
  <%= button_to 'Refresh Top Stocks', refresh_top_stocks_stocks_path, method: :post, class: 'btn-fun' %>
<% end %>

<h2>Top Stocks with Favorable Call Option Recommendations</h2>

<% if notice %>
  <div class="alert alert-success"><%= notice %></div>
<% end %>

<% if alert %>
  <div class="alert alert-danger"><%= alert %></div>
<% end %>

<% if @top_stocks.present? %>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Symbol</th>
        <th>Company Name</th>
        <th>Favorable Timeframes</th>
      </tr>
    </thead>
    <tbody>
      <% @top_stocks.each do |stock| %>
        <% timeframes = ['1 Week', '1 Month', '3 Months'] %>
        <% recommendations = stock.call_option_recommendations(timeframes) %>
        <% favorable_timeframes = recommendations.select { |_, advisable| advisable }.keys.join(', ') %>
        <tr>
          <td><%= link_to stock.symbol, stock_path(stock) %></td>
          <td><%= stock.company_name %></td>
          <td><%= favorable_timeframes.presence || 'None' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>No top stocks available at the moment.</p>
<% end %>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Symbol</th>
      <th>Company Name</th>
      <th>Predicted Price</th>
      <th>Actual Price</th>
      <th>Prediction Success</th>
      <th>Call Option Recommendation</th>
    </tr>
  </thead>
  <tbody>
    <% @stocks.each do |stock| %>
      <% recommendations = stock.call_option_recommendations %>
      <% best_timeframe = recommendations.select { |_, advisable| advisable }.keys.first %>
      <tr>
        <td><%= link_to stock.symbol, stock_path(stock) %></td>
        <td><%= stock.company_name %></td>
        <% if stock.latest_prediction %>
          <td><%= number_to_currency(stock.latest_prediction.predicted_price) %></td>
          <td><%= number_to_currency(stock.latest_prediction.actual_price) %></td>
          <td>
            <% case stock.last_prediction_successful? %>
            <% when true %>
              <span class="text-success">Successful</span>
            <% when false %>
              <span class="text-danger">Unsuccessful</span>
            <% else %>
              <span class="text-warning">Insufficient Data</span>
            <% end %>
          </td>
        <% else %>
          <td colspan="3">No prediction data available</td>
        <% end %>
        <td>
          <% if best_timeframe %>
            <span class="text-success">
              Buy call option for <%= best_timeframe %>
            </span>
          <% else %>
            <span class="text-danger">No favorable timeframes currently</span>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
